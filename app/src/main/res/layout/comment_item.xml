<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Image of the user -->
    <ImageView
        android:id="@+id/userImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/def"
        android:scaleType="centerCrop" />

    <!-- Container for user name, comment text, and new actions -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <!-- User name -->
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <!-- Comment text -->
        <TextView
            android:id="@+id/commentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <!-- Edit text box for editing comment, initially hidden -->
        <EditText
            android:id="@+id/editedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Buttons container for save and cancel, initially hidden -->
        <LinearLayout
            android:id="@+id/editButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/saveEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="14sp"
                android:padding="4dp" />

            <Button
                android:id="@+id/cancelEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="14sp"
                android:padding="4dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Container for remove and edit actions -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:gravity="center_vertical">

        <!-- Remove Comment action -->
        <Button
            android:id="@+id/removeComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:textSize="14sp"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Edit Comment action -->
        <Button
            android:id="@+id/editComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="14sp"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>
